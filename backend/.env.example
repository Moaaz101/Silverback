# Environment Variables Template for Backend
# Copy this to .env and fill in the values
# NEVER commit .env to version control!

# Database
# Local development: file:./prisma/dev.db
# Railway production: file:/data/silverback.db (uses persistent volume at /data)
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret - MUST change in production!
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-long-random-secret-minimum-64-characters-here-replace-this"

# Server
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS) - Update this after Vercel deployment
FRONTEND_URL="http://localhost:5173"
